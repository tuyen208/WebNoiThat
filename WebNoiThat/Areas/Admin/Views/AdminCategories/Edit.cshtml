@model WebNoiThat.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục :" + Model.CatName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "AdminCategories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="text-danger">@Html.ValidationSummary(true)</div>
    @Html.HiddenFor(m => m.CatID)
    @Html.HiddenFor(m => m.Thumb)
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">THÔNG TIN DANH MỤC</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">THÔNG TIN </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">MÔ TẢ CHI TIẾT</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="ProductName">Tên danh mục</label>
                        @Html.TextBoxFor(m => m.CatName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="ShortDesc">Ordering</label>
                        @Html.TextBoxFor(m => m.Ordering, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="fThumb">Ảnh đại diện</label>
                        <input type="file" name="fThumb" id="fThumb" />
                        @if (!string.IsNullOrEmpty(Model.Thumb))
                        {
                            <br />
                            <img src="@Url.Content("~/DataHA/images/category/" + Model.Thumb)" alt="@Model.CatName" class="img-thumbnail" />
                            <br />
                            <label for="imageName">Image Name</label>
                            <input type="text" name="imageName" id="imageName" value="@Model.Thumb" class="form-control" />
                        }
                    </div>
                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <div class="checkbox">
                                        <input type="checkbox" id="Published" name="Published" checked value="true">
                                        <label for="Published"></label>
                                    </div>
                                </div>
                                <label>Public</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Title</label>
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productColors">MetaDesc</label>
                        @Html.TextBoxFor(model => model.MetaDesc, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">MetaKey</label>
                        @Html.TextBoxFor(model => model.MetaKey, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">SchemaMarkup</label>
                        @Html.TextBoxFor(model => model.SchemaMarkup, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
}
