@model WebNoiThat.Models.Category

@{
    ViewBag.Title = "Thông tin danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="~/Admin/Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item active">Thông tin danh mục: trang @Model.CatName</span>
        </nav>
    </div>
</div>
<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <a>
                <img width="200" height="200" src="~/DataHA/images/category/@Model.Thumb" alt="@Model.Title" />
            </a>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.CatName</h4>
                <p class="text-muted m-b-0">ID: #@Model.CatID</p>
            </div>
        </div>
        <div class="m-b-15">
            <a href="@Url.Action("Edit", "AdminCategories", new { id = Model.CatID })" class="btn btn-primary">Sửa đổi</a>
        </div>
    </div>
</div>
<h1>Chi tiết</h1>

<div>
    <h4>Danh mục</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ordering)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ordering)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Published)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thumb)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thumb)
        </dd>
    </dl>
</div>