@model IEnumerable<WebNoiThat.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
    <tr>
        <th>
            Họ tên khách hàng
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th>
            Ngày đặt hàng
        </th>
        <th>
            Ngày hẹn lấy hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @{ if (@item.Paid == false)
                    {
                        <h5 style="color:red">Đang chờ xác nhận. </h5> }
                    else if (@item.Paid == true)
                    {
                        <h5 style="color:green">Đã xác nhận  </h5> }
                    else
                    {
                        <h5 style="color:orangered">Đang chờ xác nhận </h5> }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipDate)
            </td>
            <td>
                <button class="btn btn-primary">
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.OrderID }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }
</table>

