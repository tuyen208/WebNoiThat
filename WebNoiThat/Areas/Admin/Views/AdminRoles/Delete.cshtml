@model WebNoiThat.Models.Role

@{
    ViewBag.Title = "Xác nhận xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="~/Admin/Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a href="~/Admin/AdminRoles" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Xác nhận xóa quyền truy cập</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <h4 class="card-title">Thông tin quyền truy cập</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td>@Html.DisplayFor(model => model.RoleID)</td>
                </tr>
                <tr>
                    <td>Tên quyền truy cập:</td>
                    <td>@Html.DisplayFor(model => model.RoleName)</td>
                </tr>
                <tr>
                    <td>Mô tả:</td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
    </div>
}
