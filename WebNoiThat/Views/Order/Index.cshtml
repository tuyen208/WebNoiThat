@model IEnumerable<WebNoiThat.Models.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th>
            Ngày hẹn giao
        </th>
        <th>
            Địa chỉ nhận hàng
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @{ if (@item.Paid == false)
                    {
                        <h5 style="color:red">Đang chờ xác nhận. </h5>
                    }
                    else if (@item.Paid == true)
                    {
                        <h5 style="color:green">Đã xác nhận </h5>
                    }
                    else
                    {
                        <h5 style="color:orangered">Đang chờ xác nhận </h5>
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.OrderID })

            </td>
        </tr>
    }

</table>
